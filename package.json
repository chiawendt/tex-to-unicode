{
  "name": "tex-to-unicode",
  "type": "module",
  "private": true,
  "description": "",
  "license": "MIT",
  "repository": "chiawendt/tex-to-unicode",
  "author": {
    "name": "Chiawen Chen",
    "email": "golopot@gmail.com"
  },
  "scripts": {
    "dev": "vite build --config vite.config.extension.ts --watch",
    "dev:docs": "vite --config vite.config.docs.ts",
    "build": "npm run clean && npm run build:extension && npm run build:docs",
    "build:extension": "vite build --config vite.config.extension.ts && cd extension/dist && zip -rFS ../dist.zip *",
    "build:docs": "vite build --config vite.config.docs.ts && cp docs-src/google85979ffadaf6ad3d.html docs/",
    "clean": "rm -rf extension/dist extension/dist.zip docs/*",
    "prettier": "prettier --check .",
    "tsc": "tsc",
    "test": "jest --coverage",
    "ci": "npm run prettier && npm run tsc && npm run test && npm run build"
  },
  "dependencies": {
    "bread-n-butter": "^0.6.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.176",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "codecov": "^3.7.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "engines": {
    "node": ">=24.6.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "jsdom",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
